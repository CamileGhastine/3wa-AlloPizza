<div class="row">
    {% for product in products %}
        {% set quantity = cart.order[product.id] is defined ? cart.order[product.id].quantity : 0 %}
        <div class="card border-secondary mb-3 col-3 m-2" style="max-width: 20rem;">
            <div class="card-header">{{ product.name }}</div>
            <img src="{{ product.image }}" alt="">
            <div class="card-body">
                {% for ingredient in product.ingredients %}
                    <li>{{ ingredient }}</li>
                {% endfor %}
            </div>
            <div class="card-footer">
                <a href="{{ path('sub_cart', {'id' : product.id}) }}"><span class="badge bg-success">-</span></a>
                <span class="badge bg-secondary">{{ quantity }}</span>
                <a href="{{ path('add_cart', {'id' : product.id}) }}"><span class="badge bg-success">+</span></a>
                <div class="card-header">{{ product.price /100 }} â‚¬</div>
            </div>
        </div>
    {% endfor %}
</div>